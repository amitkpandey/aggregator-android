<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Aggregator" parent="Theme.AppCompat">
        <item name="android:keepScreenOn">true</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="TextAppearance.EntryTitle" parent="android:TextAppearance.Medium">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Widget.ImageButton.FloatingAction" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/floating_action_button</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

</resources>
